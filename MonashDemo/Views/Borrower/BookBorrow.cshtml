@model MonashDemo.Core.ViewModels.DisplayBookBorrowerViewModel

@{
    ViewBag.Title = "Borrow Books";
}

<h2>Borrow the Book</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Borrower</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.ValidationMessage("BookDoesNotExist")
        @Html.ValidationMessage("BorrowerDoesNotExist")

        <div class="form-group">
            @Html.LabelFor(model => model.BorrowerNameHeader, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.BorrowerId, new SelectList(Model.Borrowers, "Value", "Text"), "Select Borrower")
                @Html.ValidationMessageFor(model => model.Borrowers)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.BookNameHeader, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.BookId, new SelectList(Model.Books, "Value", "Text"), "Select Books")
                @Html.ValidationMessageFor(model => model.Books)
            </div>
        </div>

        <div class="form-group form-inline">
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn btn-primary btn-md col-md-offset-2 col-md-4" />            
                @Html.ActionLink("Cancel","Index","Borrower",null, new {@class="btn btn-danger btn-md col-md-offset-2 col-md-4 "})
            </div>        
        </div>        
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
